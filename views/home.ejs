<!DOCTYPE html>
<html>
<head>
  <title>NTU NEST - Home</title>
  <link rel="stylesheet" href="/css/style.css">
  <!-- 图标库 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
<div class="container">

  <!-- 左栏 -->
  <div class="sidebar-left">
    <div class="logo-section">
      <img src="/images/logo.jpg" class="nav-logo">
      <h2>NTU NEST</h2>
    </div>
    <ul class="nav">
      <li class="active"><i class="fa fa-home"></i> Home</li>
      <li><a href="/topics"><i class="fa fa-hashtag"></i> Topics</a></li>
      <li><a href="/my-follows"><i class="fa fa-user-check"></i> My Follow</a></li>
      <li><a href="/explore"><i class="fa fa-magnifying-glass"></i> Explore</a></li>
      <li><a href="/notifications"><i class="fa fa-bell"></i> Notifications</a></li>
      <li><a href="/messages"><i class="fa fa-envelope"></i> Messages</a></li>
      <li><a href="/profile"><i class="fa fa-user"></i> Profile</a></li>
      <li><a href="/history"><i class="fa fa-clock-rotate-left"></i> History</a></li>
    </ul>
    <!-- 草稿箱入口按钮（点击后在右侧显示草稿） -->
    <button id="open-drafts" class="post-btn" style="width:100%; margin-top:10px; background:linear-gradient(135deg,#6b7280,#4b5563);">
      <i class="fa fa-file-lines"></i> 草稿箱
    </button>
     <!-- 发帖表单 (多图) -->
     <div class="post-form-section">
      <h4>发布新帖</h4>
      <form action="/home/post" method="POST" enctype="multipart/form-data" class="post-form">
        <select name="topic_id" required class="topic-select">
          <option value="">选择话题</option>
          <% topics.forEach(topic => { %>
            <option value="<%= topic.id %>"><%= topic.display_name %></option>
          <% }) %>
        </select>
  <textarea name="content" placeholder="分享你的想法..." class="post-textarea"></textarea>
        <div class="file-upload">
          <label for="files" class="file-label"><i class="fa fa-image"></i> 添加图片(可多选)</label>
          <input type="file" id="files" name="files" accept="image/*" multiple class="file-input">
        </div>
        <div id="weibo-previews" class="image-previews" style="display:flex;gap:6px;flex-wrap:wrap;margin:6px 0;"></div>
        <button type="submit" class="post-btn"><i class="fa fa-paper-plane"></i> 发布</button>
        <button type="button" id="draft-save-btn" style="margin-left:8px;" class="post-btn">保存草稿</button>
        <input type="hidden" id="current-draft-id" value="">
      </form>
    </div>
  </div>

  <!-- 中栏 -->
  <div class="main">
    <!-- 中栏草稿箱（默认隐藏，仅草稿视图使用） -->
    <div id="drafts-main-card" style="display:none; margin-bottom:12px;">
      <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:10px;">
        <h4 style="margin:0;">草稿箱</h4>
        <button id="back-to-posts" class="post-btn" style="background:linear-gradient(135deg,#6b7280,#4b5563);">返回帖子</button>
      </div>
      <div id="drafts-cards" style="display:flex;flex-direction:column;gap:10px;"></div>
    </div>
    <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:15px;">
      <h3 class="section-title" style="margin:0;">Recent Posts</h3>
      <div style="display:flex;align-items:center;gap:5px;">
        <select id="search-type" style="padding:5px;border:1px solid #ddd;border-radius:3px;font-size:14px;">
          <option value="all">All</option>
          <option value="username">Username</option>
          <option value="content">Content</option>
        </select>
        <input type="text" id="post-search" placeholder="Search posts..." style="padding:5px;border:1px solid #ddd;border-radius:3px;font-size:14px;">
      </div>
    </div>
  <div class="posts-feed" id="posts-feed">
      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="post-card">
            <div class="post-header">
              <span class="post-author">
                <a href="javascript:void(0)" class="user-link" data-user-id="<%= post.user_id %>">@<%= post.username %></a>
              </span>
              <span class="post-topic">in <%= post.topic_name %></span>
              <span class="post-time"><%= new Date(post.created_at).toLocaleDateString() %></span>
            </div>
            <div class="post-content">
              <p><%= post.content %></p>
              <% if (post.files && post.files.length>0) { %>
                <div class="post-images" style="display:flex;gap:6px;flex-wrap:wrap;">
                  <% post.files.forEach(f => { %>
                    <img src="<%= f %>" style="max-width:180px;max-height:180px;object-fit:cover;border-radius:6px;" onerror="this.onerror=null;this.src='/images/logo.jpg'" />
                  <% }) %>
                </div>
              <% } %>
            </div>
            <div class="post-actions" style="margin-top:8px;display:flex;gap:10px;align-items:center;">
              <button class="btn-like" data-post-id="<%= post.id %>">❤️ <span class="like-count"><%= post.likes || 0 %></span></button>
              <button class="btn-comment-toggle" data-post-id="<%= post.id %>">💬 <span class="comment-count"><%= post.comments || 0 %></span></button>
              <button class="btn-share" data-post-id="<%= post.id %>">↗️ <span class="share-count"><%= post.shares || 0 %></span></button>
              <% if (user && user.id === post.user_id) { %>
                <button class="btn-delete" data-post-id="<%= post.id %>" style="margin-left:auto;">🗑️ 删除</button>
              <% } %>
            </div>
            <div class="comments-section" data-post-id="<%= post.id %>" style="display:none;margin-top:6px;">
              <div class="existing-comments" style="font-size:14px;">
                <% (post.comments_list||[]).forEach(c => { %>
                  <div class="comment"><strong><%= c.username %></strong>: <%= c.content %></div>
                <% }) %>
              </div>
              <div style="display:flex;gap:6px;margin-top:4px;">
                <input class="comment-input" placeholder="Add a comment..." style="flex:1;padding:4px;">
                <button class="btn-comment-submit" style="padding:4px 10px;">发送</button>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="no-posts">
          <p>还没有帖子，快去发布第一个帖子吧！</p>
          <p>点击左侧的 "Topics" 选择一个话题开始发帖。</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- 右栏 -->
  <div class="sidebar-right">
    <div class="info-card" id="card-calendar">
      <h3 class="card-header-row" style="display:flex;align-items:center;justify-content:space-between;margin:0;">
        <span>Calendar</span>
        <button id="toggle-calendar" class="collapse-btn" aria-expanded="true" title="折叠/展开" style="background:#fff;border:1px solid #e5e7eb;border-radius:6px;padding:4px 8px;cursor:pointer;">
          <i class="fa fa-chevron-up"></i>
        </button>
      </h3>
      <div id="calendar-body" class="calendar-form" style="display:flex;flex-direction:column;gap:8px;">
        <input id="cal-title" placeholder="事件/课程标题" style="padding:6px 8px;border:1px solid #ddd;border-radius:8px;">
        <input id="cal-start" type="datetime-local" style="padding:6px 8px;border:1px solid #ddd;border-radius:8px;">
        <input id="cal-end" type="datetime-local" style="padding:6px 8px;border:1px solid #ddd;border-radius:8px;">
        <input id="cal-location" placeholder="地点(可选)" style="padding:6px 8px;border:1px solid #ddd;border-radius:8px;">
        <textarea id="cal-notes" placeholder="备注(可选)" style="padding:6px 8px;border:1px solid #ddd;border-radius:8px;min-height:60px;"></textarea>
        <label style="font-size:12px;color:#666;">提醒（分钟前）：
          <input id="cal-remind" type="number" min="0" step="5" value="60" style="width:80px;margin-left:6px;">
        </label>
        <button id="cal-add" class="post-btn">添加事件</button>
      </div>
    </div>
    <div class="info-card" id="card-upcoming">
      <h3 class="card-header-row" style="display:flex;align-items:center;justify-content:space-between;margin:0;">
        <span>Upcoming</span>
        <button id="toggle-upcoming" class="collapse-btn" aria-expanded="true" title="折叠/展开" style="background:#fff;border:1px solid #e5e7eb;border-radius:6px;padding:4px 8px;cursor:pointer;">
          <i class="fa fa-chevron-up"></i>
        </button>
      </h3>
      <div id="upcoming-body" class="calendar-list" style="display:flex;flex-direction:column;gap:8px;"></div>
    </div>
    <div class="info-card">
      <h3>Today's Weather</h3>
      <div id="weather">Loading...</div>
    </div>
    <div class="info-card">
      <h3>Campus Events</h3>
      <ul>
        <li>Welcome Week booths @North Spine</li>
        <li>Hack & Learn Night every Fri 7pm</li>
      </ul>
    </div>
    <div class="info-card">
      <h3>Quick Links</h3>
      <a href="https://ntulearn.ntu.edu.sg/" target="_blank" class="quick-link">NTULearn</a>
      <a href="https://sso.wis.ntu.edu.sg/links/pgstudent.html" target="_blank" class="quick-link">GSlink</a>
    </div>
  </div>

</div>
<script src="/js/main.js"></script>
<script>
// Recent Posts 搜索功能
function performSearch() {
  const query = document.getElementById('post-search').value.trim();
  const searchType = document.getElementById('search-type').value;
  const posts = document.querySelectorAll('.post-card');

  posts.forEach(post => {
    const contentEl = post.querySelector('.post-content p');
    const authorEl = post.querySelector('.post-author');
    const content = contentEl.textContent.toLowerCase();
    const author = authorEl.textContent.toLowerCase();

    if (!query) {
      post.style.display = 'block';
      contentEl.innerHTML = contentEl.textContent;
      authorEl.innerHTML = authorEl.textContent;
      return;
    }

    let shouldShow = false;
    const regex = new RegExp(`(${query})`, 'gi');

    // 重置高亮
    contentEl.innerHTML = contentEl.textContent;
    authorEl.innerHTML = authorEl.textContent;

    if (searchType === 'all') {
      shouldShow = content.includes(query.toLowerCase()) || author.includes(query.toLowerCase());
      if (shouldShow) {
        if (content.includes(query.toLowerCase())) {
          contentEl.innerHTML = contentEl.textContent.replace(regex, '<mark>$1</mark>');
        }
        if (author.includes(query.toLowerCase())) {
          authorEl.innerHTML = authorEl.textContent.replace(regex, '<mark>$1</mark>');
        }
      }
    } else if (searchType === 'username') {
      shouldShow = author.includes(query.toLowerCase());
      if (shouldShow) {
        authorEl.innerHTML = authorEl.textContent.replace(regex, '<mark>$1</mark>');
      }
    } else if (searchType === 'content') {
      shouldShow = content.includes(query.toLowerCase());
      if (shouldShow) {
        contentEl.innerHTML = contentEl.textContent.replace(regex, '<mark>$1</mark>');
      }
    }

    post.style.display = shouldShow ? 'block' : 'none';
  });
}

document.getElementById('post-search').addEventListener('input', performSearch);
document.getElementById('search-type').addEventListener('change', performSearch);
</script>
<!-- 用户卡片全局容器：复用同一个浮层（中文注释） -->
<div id="user-card" class="user-card">
  <div class="user-card-header">
    <img id="uc-avatar" class="user-card-avatar" src="/images/logo.jpg" alt="avatar" />
    <div>
      <div id="uc-display" class="user-card-name">用户名</div>
      <div id="uc-username" class="user-card-username">@username</div>
    </div>
  </div>
  <div id="uc-bio" class="user-card-bio"></div>
  <div class="user-card-stats">
    <div><span id="uc-followers">0</span> 粉丝</div>
    <div><span id="uc-following">0</span> 关注</div>
  </div>
  <div class="user-card-actions">
    <button id="uc-follow-btn" class="btn-follow">关注</button>
  </div>
 </div>
</body>
</html>
