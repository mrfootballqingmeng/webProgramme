<script>
// Recent Posts ÊêúÁ¥¢ÂäüËÉΩ
function performSearch() {
  const query = document.getElementById('post-search').value.trim();
  const searchType = document.getElementById('search-type').value;
  const posts = document.querySelectorAll('.post-card');

  posts.forEach(post => {
    const contentEl = post.querySelector('.post-content p');
    const authorEl = post.querySelector('.post-author');
    const content = contentEl.textContent.toLowerCase();
    const author = authorEl.textContent.toLowerCase();

    if (!query) {
      post.style.display = 'block';
      contentEl.innerHTML = contentEl.textContent;
      authorEl.innerHTML = authorEl.textContent;
      return;
    }

    let shouldShow = false;
    const regex = new RegExp(`(${query})`, 'gi');

    // ÈáçÁΩÆÈ´ò‰∫Æ
    contentEl.innerHTML = contentEl.textContent;
    authorEl.innerHTML = authorEl.textContent;

    if (searchType === 'all') {
      shouldShow = content.includes(query.toLowerCase()) || author.includes(query.toLowerCase());
      if (shouldShow) {
        if (content.includes(query.toLowerCase())) {
          contentEl.innerHTML = contentEl.textContent.replace(regex, '<mark>$1</mark>');
        }
        if (author.includes(query.toLowerCase())) {
          authorEl.innerHTML = authorEl.textContent.replace(regex, '<mark>$1</mark>');
        }
      }
    } else if (searchType === 'username') {
      shouldShow = author.includes(query.toLowerCase());
      if (shouldShow) {
        authorEl.innerHTML = authorEl.textContent.replace(regex, '<mark>$1</mark>');
      }
    } else if (searchType === 'content') {
      shouldShow = content.includes(query.toLowerCase());
      if (shouldShow) {
        contentEl.innerHTML = contentEl.textContent.replace(regex, '<mark>$1</mark>');
      }
    }

    post.style.display = shouldShow ? 'block' : 'none';
  });
}

document.getElementById('post-search').addEventListener('input', performSearch);
document.getElementById('search-type').addEventListener('change', performSearch);
</script>
