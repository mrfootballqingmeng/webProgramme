<!-- Custom Date Time Picker Modal -->
<div id="datetime-picker-modal" style="display:none;position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,0.5);z-index:1000;justify-content:center;align-items:center;">
  <div style="background:white;padding:20px;border-radius:8px;box-shadow:0 4px 20px rgba(0,0,0,0.3);max-width:300px;">
    <h4 style="margin:0 0 15px 0;">Select Date & Time</h4>
    <div style="display:flex;flex-direction:column;gap:10px;">
      <label>Year:
        <select id="dt-year" style="padding:5px;border:1px solid #ddd;border-radius:4px;width:100%;"></select>
      </label>
      <label>Month:
        <select id="dt-month" style="padding:5px;border:1px solid #ddd;border-radius:4px;width:100%;"></select>
      </label>
      <label>Day:
        <select id="dt-day" style="padding:5px;border:1px solid #ddd;border-radius:4px;width:100%;"></select>
      </label>
      <label>Hour:
        <select id="dt-hour" style="padding:5px;border:1px solid #ddd;border-radius:4px;width:100%;"></select>
      </label>
      <label>Minute:
        <select id="dt-minute" style="padding:5px;border:1px solid #ddd;border-radius:4px;width:100%;"></select>
      </label>
    </div>
    <div style="display:flex;gap:10px;margin-top:15px;">
      <button onclick="confirmDateTime()" style="flex:1;padding:8px;background:#007bff;color:white;border:none;border-radius:4px;cursor:pointer;">Confirm</button>
      <button onclick="closeDateTimePicker()" style="flex:1;padding:8px;background:#6c757d;color:white;border:none;border-radius:4px;cursor:pointer;">Cancel</button>
    </div>
  </div>
</div>

<script>
let currentDateTimeInput = null;

function openDateTimePicker(input) {
  currentDateTimeInput = input;
  const modal = document.getElementById('datetime-picker-modal');
  
  // Initialize date picker values
  const now = new Date();
  const currentValue = input.value;
  let selectedDate = now;
  
  if (currentValue) {
    const parsedDate = new Date(currentValue.replace(' ', 'T'));
    if (!isNaN(parsedDate.getTime())) {
      selectedDate = parsedDate;
    }
  }
  
  populateYearOptions(selectedDate.getFullYear());
  populateMonthOptions(selectedDate.getMonth());
  populateDayOptions(selectedDate.getFullYear(), selectedDate.getMonth(), selectedDate.getDate());
  populateHourOptions(selectedDate.getHours());
  populateMinuteOptions(selectedDate.getMinutes());
  
  modal.style.display = 'flex';
}

function closeDateTimePicker() {
  document.getElementById('datetime-picker-modal').style.display = 'none';
  currentDateTimeInput = null;
}

function confirmDateTime() {
  const year = document.getElementById('dt-year').value;
  const month = document.getElementById('dt-month').value;
  const day = document.getElementById('dt-day').value;
  const hour = document.getElementById('dt-hour').value;
  const minute = document.getElementById('dt-minute').value;
  
  const formattedDateTime = `${year}-${month.padStart(2, '0')}-${day.padStart(2, '0')} ${hour.padStart(2, '0')}:${minute.padStart(2, '0')}`;
  
  if (currentDateTimeInput) {
    currentDateTimeInput.value = formattedDateTime;
  }
  
  closeDateTimePicker();
}

function populateYearOptions(selectedYear) {
  const yearSelect = document.getElementById('dt-year');
  yearSelect.innerHTML = '';
  const currentYear = new Date().getFullYear();
  for (let year = currentYear; year <= currentYear + 5; year++) {
    const option = document.createElement('option');
    option.value = year;
    option.textContent = year;
    if (year === selectedYear) option.selected = true;
    yearSelect.appendChild(option);
  }
}

function populateMonthOptions(selectedMonth) {
  const monthSelect = document.getElementById('dt-month');
  monthSelect.innerHTML = '';
  const months = ['01', '02', '03', '04', '05', '06', '07', '08', '09', '10', '11', '12'];
  months.forEach((month, index) => {
    const option = document.createElement('option');
    option.value = month;
    option.textContent = month;
    if (index === selectedMonth) option.selected = true;
    monthSelect.appendChild(option);
  });
}

function populateDayOptions(year, month, selectedDay) {
  const daySelect = document.getElementById('dt-day');
  daySelect.innerHTML = '';
  const daysInMonth = new Date(year, month + 1, 0).getDate();
  for (let day = 1; day <= daysInMonth; day++) {
    const option = document.createElement('option');
    const dayStr = day.toString().padStart(2, '0');
    option.value = dayStr;
    option.textContent = dayStr;
    if (day === selectedDay) option.selected = true;
    daySelect.appendChild(option);
  }
}

function populateHourOptions(selectedHour) {
  const hourSelect = document.getElementById('dt-hour');
  hourSelect.innerHTML = '';
  for (let hour = 0; hour < 24; hour++) {
    const option = document.createElement('option');
    const hourStr = hour.toString().padStart(2, '0');
    option.value = hourStr;
    option.textContent = hourStr;
    if (hour === selectedHour) option.selected = true;
    hourSelect.appendChild(option);
  }
}

function populateMinuteOptions(selectedMinute) {
  const minuteSelect = document.getElementById('dt-minute');
  minuteSelect.innerHTML = '';
  for (let minute = 0; minute < 60; minute += 5) {
    const option = document.createElement('option');
    const minuteStr = minute.toString().padStart(2, '0');
    option.value = minuteStr;
    option.textContent = minuteStr;
    if (minute === selectedMinute || (selectedMinute >= minute && selectedMinute < minute + 5)) {
      option.selected = true;
    }
    minuteSelect.appendChild(option);
  }
}

// Update day options when year or month changes
document.addEventListener('DOMContentLoaded', function() {
  if (document.getElementById('dt-year')) {
    document.getElementById('dt-year').addEventListener('change', updateDayOptions);
    document.getElementById('dt-month').addEventListener('change', updateDayOptions);
  }
});

function updateDayOptions() {
  const year = parseInt(document.getElementById('dt-year').value);
  const month = parseInt(document.getElementById('dt-month').value) - 1;
  const currentDay = parseInt(document.getElementById('dt-day').value) || 1;
  populateDayOptions(year, month, currentDay);
}
</script>

